{
    "name": "tabler-react",
    "version": "1.30.1",
    "description": "",
    "author": "jonthomp and AaronCoplan",
    "license": "MIT",
    "repository": "tabler/tabler-react",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "jsnext:main": "dist/index.es.js",
    "scripts": {
        "test": "CI=1 react-scripts test --env=jsdom",
        "test:watch": "react-scripts test --env=jsdom",
        "build": "npm run copytablercsstodist && rollup -c && npm run flow:copy-source",
        "start": "npm run copytablercsstodist && rollup -c -w",
        "prepare": "npm run build && npm run copytablercsstodist",
        "predeploy": "cd example && npm install && npm run build && shx cp build/index.html build/404.html",
        "deploy": "echo \"tabler-react.com\" > example/build/CNAME && gh-pages -d example/build",
        "precommit": "npm pretty-quick --staged && lint-staged && cd scripts && python propscheck.py && cd .. && ./scripts/runflow",
        "flow:copy-source": "node scripts/flow-copy-source.js",
        "format": "prettier --write \"+(src|example)/**/*.js\"",
        "pretty-quick": "pretty-quick",
        "lint": "eslint --ext .js src/**/*",
        "styleguide": "styleguidist server",
        "styleguide:build": "styleguidist build",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "copytablercsstodist": "shx mkdir -p dist && shx cp src/Tabler.css src/Tabler.RTL.css dist/ && shx cp -r src/fonts src/images dist/",
        "cm": "git-cz",
        "startagain": "shx rm -rf dist node_modules example/node_modules package-lock.json yarn.lock example/package-lock.json example/yarn.lock && npm install && cd example && npm install && cd .. && npm run build",
        "semantic-release": "semantic-release  --no-ci"
    },
    "lint-staged": {
        "src/**/*.js": "eslint --max-warnings=0"
    },
    "dependencies": {
        "classnames": "^2.2.5",
        "react-popper": "^1.0.0-beta.6",
        "react-text-mask": "^5.4.1"
    },
    "peerDependencies": {
        "react": "^16.14.0",
        "react-dom": "^16.14.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@rollup/plugin-babel": "^5.2.2",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.1",
        "@rollup/plugin-url": "^6.0.0",
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-stage-0": "^6.24.1",
        "commitizen": "^4.2.2",
        "commitlint": "^11.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "empty": "^0.10.1",
        "eslint": "^7.15.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-flowtype": "^5.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.21.5",
        "flow-bin": "^0.89.0",
        "flow-copy-source": "^2.0.9",
        "gh-pages": "^3.1.0",
        "husky": "^4.3.6",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-scripts": "^4.0.1",
        "react-styleguidist": "^8.0.0",
        "rollup": "^2.35.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-terser": "^7.0.2",
        "semantic-release": "^17.3.0",
        "shx": "^0.3.3"
    },
    "files": [
        "dist"
    ],
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
